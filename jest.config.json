{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts", "!src/server.ts", "!src/scripts/**"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"]
}
